{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "rules": {
    "semi": "off",
    "react/destructuring-assignment": "off",
    "react/no-access-state-in-setstate": "off",
    "no-restricted-syntax": "off",
    "no-lonely-if": "off"
  }
}